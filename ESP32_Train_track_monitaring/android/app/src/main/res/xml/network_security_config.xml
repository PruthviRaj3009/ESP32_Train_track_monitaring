<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
      Allows HTTP (cleartext) traffic for development / local IP streaming.
      If you want to restrict later, replace this with domain-config for your IP/domain.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
